@model IEnumerable<oooooo.tPay>

@{
    ViewBag.Title = "payList";
}

<h2>payList</h2>

<p>
    @Html.ActionLink("新增", "payKeyIn", "BackFinancial", new { }, new { @class = "btn btn-success" })
</p>
<form action="">
    <label for="numData">
        顯示
        <select name="numData" id="numData">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
        </select>
        資料
    </label>
    <select name="type" id="type">
        <option value="all">全部</option>
        <option value="fix">修繕</option>
        <option value="activity">活動</option>
        <option value="human">人事</option>
        <option value="incidental">雜費</option>
    </select>
    <label for="fromD">開始日期:</label>
    <input id="fromD" type="date" name="fromD">
    <label for="endD">結束日期:</label>
    <input id="endD" type="date" name="endD">
    <input type="search" name="search" id="search" class="light-table-filter" data-table="order-table" placeholder="  輸入關鍵字">
    <input type="submit" value="查詢">
</form>

<table class="table table-striped table-advance table-hover order-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fPayId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fpayDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fpayType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fpayVendor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fpayVendorPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fProductPurpose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fTaxType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fHandInType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fBuyer)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fPayId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fpayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fpayType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fpayVendor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fpayVendorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fProductPurpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fTaxType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fHandInType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fBuyer)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "BackFinancial", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary" }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "payDelete", "BackFinancial", new { id = item.fPayId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div id="payChart" style="margin: 0 auto; width: 900px;height: 500px;"></div>
<script src="~/js/payList.js"></script>
<script src="~/js/payPie.js"></script>
