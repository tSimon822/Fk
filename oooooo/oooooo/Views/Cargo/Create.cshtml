@model oooooo.tCargo

@{
    ViewBag.Title = "Create";
}

<h2>新增信件/包裹</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-1">貨運公司</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fShipCompany, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fShipCompany, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">寄件人</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fSender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fSender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">收件人</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fUserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">類型</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fCargoType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fCargoType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">收件日期</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fArriveDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fArriveDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">簽收狀態</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fReceiveOrNot, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fReceiveOrNot, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-1">簽名</div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.fSignaturePath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fSignaturePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-2">
                <input type="submit" value="確定新增" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回列表", "Cargo")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
