@model oooooo.tEventRegister

@{
    ViewBag.Title = "SetRegistForm";
}
<head>
    <link rel="stylesheet" href="../style/event_B.css">
</head>

<h2>設定報名表</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row ml-5 my-4">

            <div class="col-5 signform border mr-4">
                <h5> 客製化報名表</h5>

                <div class="form-group">
                    <label for="exampleFormControlInput1">姓名<span class="text-danger">*</span> </label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">行動電話 <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">電子郵件<span class="text-danger">*</span> </label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
            </div>
            <div class="col-5 signform border ml-4">
                <h5> 拖拉欄位組件</h5>
                <div class="row ml-1">
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 身分證字號</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 出生年月日</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 性別</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 血型</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 教育程度</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 婚姻狀況</div>
                    <div style="cursor:pointer" class="formitem col-5 mr-3 mb-3"> <i class="fa fa-plus"></i> 職業</div>
                </div>
            </div>
        </div>



        <div hidden>
            <div class="form-group">
                <div class="control-label col-md-2">活動編號</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fEventId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fEventId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">報名編號</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fEventRegisterId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fEventRegisterId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">戶號</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fUserId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fUserId, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="control-label col-md-2">參加人數</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fnumAttendPeople, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fnumAttendPeople, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">姓名</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fAttendName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fAttendName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">生日</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferBirthday, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferBirthday, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">身分證字號</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferIdentity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferIdentity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">性別</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferGender, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferGender, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">教育程度</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferEducation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferEducation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">職業</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferOccupation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferOccupation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">血型</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferBloodType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferBloodType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">婚姻狀況</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ferMarrige, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ferMarrige, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
